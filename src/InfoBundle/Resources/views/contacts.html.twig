{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDWdm1zrblFjsdUfi1-6fsPvj30ACCiCxk"></script>
    <script src="{{ asset('assets/js/show_map.js') }}"></script>
{% endblock %}

{% block content %}

    <div id="map" data-lat="55.754110" data-lng="37.620800" class="uk-margin-bottom"></div>



    <div class="standard_wide">
        <h1>Контакты</h1>
        <div>
            <form action="/user/sendMessage" uk-grid class="uk-grid-medium">
                <div class="uk-width-1-3"><input type="text" name="name" class="uk-input" placeholder="Имя"></div>
                <div class="uk-width-1-3"><input type="text" name="phone" class="uk-input uk-width-1-1" placeholder="Телефон"></div>
                <div class="uk-width-1-3"><input type="text" name="email" class="uk-input" placeholder="Email" required></div>
                <div class="uk-width-1-1"><textarea name="message" class="uk-width-1-1 short_textarea" placeholder="Сообщение" required></textarea>
                </div>

                <div class="uk-width-1-1">
                    <button class="uk-button uk-button-default">Отправить</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}