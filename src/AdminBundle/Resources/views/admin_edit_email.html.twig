{% extends 'AdminBundle::admin_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/tinymce/jquery.tinymce.min.js') }}"></script>
    <script src="{{ asset('assets/tinymce/tinymce.min.js') }}"></script>
    <script src="{{ asset('assets/js/visual_editor.js') }}"></script>
{% endblock %}

{% block content %}
    <h1>Письмо</h1>

    <form action="/adminEditEmail" method="POST">
        <textarea name="email" class="uk-textarea visual_editor">{{ email }}</textarea>
        <input type="hidden" name="file" value="{{ file }}">
        <button class="uk-button uk-button-primary">Записать</button>
        <input type="text" name="check_email" value="mail@multiprokat.com" class="uk-input uk-width-1-4">
        <button class="uk-button uk-button-primary" name="sendCheck">Записать и отправить посмотреть</button>
    </form>
{% endblock %}
