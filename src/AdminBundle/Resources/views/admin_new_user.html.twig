{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/signup_validate.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="standard_wide">
        <h1>Создать новый аккаунт</h1>
        <form id="signUpForm" action="/adminNewUser" method="POST" onsubmit="return signup_validate();">
            <input type="text" name="header" class="uk-input uk-width-1-2" placeholder="login" required><br>
            <input type="text" name="email" class="uk-input uk-width-1-2" placeholder="email" required><br>
            <input type="text" name="password" class="uk-input uk-width-1-2" placeholder="password" required><br>
            <button class="uk-button uk-button-primary">Создать</button>
        </form>
    </div>
{% endblock %}