{% extends 'AdminBundle::admin_base.html.twig' %}

{% block content %}

<h1>FAQ</h1>

<a href="/adminFaqAdd">Добавить новый материал</a>
    <hr>
        {% for f in faq %}
            <div>
                {#<span>{{ news.dateCreate|date('d.m.Y') }}</span>#}
                {{ f.position }}. <a href="/adminFaqEdit/{{ f.id }}">{{ f.header }}</a>
                <form action="/adminFaqDelete" method="post" class="uk-display-inline-block">
                    <input type="hidden" name="id" value="{{ f.id }}">
                    <button onclick="return confirm('Вы уверены?')">Удалить</button>
                </form>
            </div>
        {% endfor %}


{% endblock %}
