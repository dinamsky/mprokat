{% extends 'AdminBundle::admin_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <h1>Заблокировать пользователя</h1>

    <form  action="/adminUserBan" method="POST">
        Укажите ID пользователя <input type="text" name="user_id" class="uk-input uk-width-1-2" required><br>
        <button class="uk-button uk-button-primary">Заблокировать</button>
    </form>

    <h3>Список заблокированных пользователей</h3>

    <div>
        {% for user in allBanned %}
             <div>ID:{{ user.id }} <b>{{ user.email }}</b> {{ user.header }}
                 <form  action="/adminUserUnBan" method="POST" class="uk-display-inline-block">
                     <input type="hidden" name="user_id" value="{{ user.id }}">
                     <button class="uk-button uk-button-default uk-button-small">Разблокировать</button>
                 </form>
             </div>
        {% endfor %}
    </div>

{% endblock %}