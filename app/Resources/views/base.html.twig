<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">


        {% block stylesheets %}
            <link href="{{ asset('assets/css/uikit.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/base.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/font-awesome.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/colors.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/typo.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}" />
        <title>{% block title %}Мультипрокат{% endblock %}</title>
    </head>
    <body>

        <header>
            <div class="top_line bg_blue">
                <div class="standard_wide uk-clearfix">
                    <div class="uk-float-left top_sc_links">
                        <a href="/"><span uk-icon="icon:facebook"></span></a>
                        <a href="/"><span uk-icon="icon:twitter"></span></a>
                        <a href="/"><span uk-icon="icon:google-plus"></span></a>
                        <a href="/"><span uk-icon="icon:instagram"></span></a>
                        <a href="/">vk</a>
                        <a href="/"><span uk-icon="icon:youtube"></span></a>
                        <a href="/"><span uk-icon="icon:mail"></span></a>
                    </div>
                    <div class="uk-float-right">
                        {{ include('user/auth_button_modal.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="top_sticky" uk-sticky>
                <div class="standard_wide">
                    <div uk-grid>
                        <div class="uk-width-1-2"><a href="/"><img class="logo" src="/assets/images/interface/logo.png" alt=""></a></div>
                        <div class="uk-width-1-2 uk-text-right">
                            <a href="/card/new" class="uk-button uk-button-danger uk-button-small">+ Добавить объявление</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>


        <div id="content">

            {% block left_block %}{% endblock %}


            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div uk-alert>
                        <a class="uk-alert-close" uk-close></a>
                        <div class="flash-{{ label }}">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}


            {% block content %}{% endblock %}

            {% block right_block %}{% endblock %}

        </div>

        <footer class="uk-margin-top">
            <div class="footer_info ">
                <div class="standard_wide c_white">
                    <div uk-grid>
                        <div class="uk-width-1-4">
                            МУЛЬТИПРОКАТ<br>
                            Москва, Россия<br>
                            +7(916)455-98-08
                        </div>
                        <div class="uk-width-1-4">Топ</div>
                        <div class="uk-width-1-4">Новый транспорт</div>
                        <div class="uk-width-1-4">
                            <div>
                                <a href="#">> Новости</a>
                            </div>
                            <div>
                                <a href="#">> Контакты</a>
                            </div>
                            <div>
                                <a href="#">> Сдать свой автомобиль</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom_line bg_blue">
                <div class="standard_wide uk-clearfix">
                    <div class="uk-float-left c_white">&copy; {{ date()|date("Y") }} МультиПрокат | Сервис аренды автотранспорта</div>
                    <div class="uk-float-right c_white">
                        <a href="#" class="c_white">Условия и положения</a> /
                        <a href="#" class="c_white">Конфиденциальность</a>
                    </div>
                </div>
            </div>
        </footer>

                {#{{ include('filter_fields/custom_fields.html.twig', { 'custom_fields': custom_fields }) }}#}
                {#{{ include('mark/mark_menu.html.twig', { 'mark_model': mark_model, 'city_id': city.id, 'general_type': general_type }) }}#}

        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset('assets/js/uikit.min.js') }}"></script>
            <script src="{{ asset('assets/js/uikit-icons.min.js') }}"></script>
            <script src="{{ asset('assets/js/newCardForm.js') }}"></script>
        {% endblock %}
    </body>
</html>
