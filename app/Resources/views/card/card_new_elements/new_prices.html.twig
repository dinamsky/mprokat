<div uk-grid>
    <div class="uk-width-1-5">
        {% trans %}Цены{% endtrans %} <span class="red_star">*</span>
        <div class="help_text">{% trans %}Укажите свои расценки по периодам{% endtrans %}</div>
    </div>
    <div class="uk-width-3-5">

        <div class="uk-margin-bottom">
            <select name="currency" class="uk-width-1-5 uk-select">
                <option value="EUR">EUR</option>
                <option value="USD" {{ city.country == 'USA' or city.country == 'CAN' ? 'selected' }}>USD</option>
                <option value="RUB" {{ city.country == 'RUS' or city.country == 'RUS' ? 'selected' }}>RUB</option>
            </select>
        </div>

        <div class="uk-margin-bottom">
            <input type="number" name="price[10]" class="uk-input uk-width-1-3 one_of" value="0"> ₽ - <span> Залог (укажите, если необходимо) </span>
        </div>


        <div class="non_plane">
            <div uk-grid>
                <div class="uk-width-1-2">
                    <div class="">
                        <div class="">
                            {% for price in prices if price.id < 3 %}
                                <div class="uk-margin-small-bottom">
                                    <input type="number" name="price[{{ price.id }}]" class="uk-input uk-width-1-3 one_of"> / <span>{{ price.header|trans }}</span>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="uk-text-small"><span class="red_star">*</span> {% trans %}Одна из расценок: в час/в день обязательна!{% endtrans %}</div>
                    </div>
                </div>
                <div class="uk-width-1-2">
                    <div id="counted_prices"></div>
                </div>
            </div>

            <div class="uk-margin-top">
                <span class="expander_button" uk-toggle="target: #price_selector">{% trans %}Еще расценки{% endtrans %} <i uk-icon="icon:chevron-down"></i></span>
            </div>
            <div class="expandable_block uk-margin-top" id="price_selector" hidden>
                {% for price in prices if price.id > 2 and price.id != 6 and price.id < 7%}
                    <div>
                        <input type="number" name="price[{{ price.id }}]" class="uk-input uk-width-1-3"> / <span>{{ price.header|trans }} </span>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="plane" style="display: none">
            <input type="number" name="price[6]" class="uk-input uk-width-1-3 one_of"> ₽ - <span>{% trans %}Ориентировочная{% endtrans %}</span>
        </div>


    </div>
    <div class="uk-width-1-5">

    </div>
</div>