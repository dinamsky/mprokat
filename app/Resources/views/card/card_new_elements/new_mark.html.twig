<div uk-grid>
    <div class="uk-width-1-5">
        {% trans %}Марка и модель{% endtrans %} <span class="red_star">*</span>
        <div class="help_text">{% trans %}Выберите марку и модель транспорта{% endtrans %}</div>
    </div>
    <div class="uk-width-3-5">
        <div uk-grid class="uk-grid-small">

            <input type="hidden" name="groupName" value="cars">

            <div class="uk-hidden">
                <div class="uk-text-small">Группа</div>
                <select name="groupName" id="markGroupName" class="uk-select">
                    {{ include( 'common/ajax_edit_options.html.twig', { 'options': mark_groups, 'id': 1 }) }}
                </select>
            </div>

            <div class="uk-width-1-2 mark_placeholder">
                <div class="uk-text-small">{% trans %}Марка{% endtrans %}</div>

                <select name="mark" id="markId" class="uk-select sel_combo">
                    {{ include( 'common/ajax_edit_options.html.twig', { 'options': marks, 'id': 0 }) }}
                </select>

            </div>

            <div class="uk-width-1-2 model_placeholder">
                <div class="uk-text-small">{% trans %}Модель{% endtrans %}</div>
                <select name="modelId" id="markModelId" class="uk-select sel_combo"></select>
            </div>

            <div class="uk-width-1-1 help_text">{% trans %}Если не нашли свою марку/модель - поставьте галочку и укажите требуемое{% endtrans %}</div>

            <div class="uk-width-1-3">
                <label><input type="checkbox" name="noMark"> {% trans %}Марки нет в списке{% endtrans %}</label>
            </div>

            <div class="uk-width-2-3">
                <input name="ownMark" class="uk-input uk-hidden" placeholder="{% trans %}впишите свою марку{% endtrans %}">
            </div>

            <div class="uk-width-1-3">
                <label><input type="checkbox" name="noModel"> {% trans %}Модели нет в списке{% endtrans %}</label>
            </div>

            <div class="uk-width-2-3">
                <input name="ownModel" class="uk-input uk-hidden" placeholder="{% trans %}впишите свою модель{% endtrans %}">
            </div>

        </div>
    </div>
    <div class="uk-width-1-5">

    </div>
</div>