{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('assets/tinymce/jquery.tinymce.min.js') }}"></script>
    <script src="{{ asset('assets/tinymce/tinymce.min.js') }}"></script>
    <script src="{{ asset('assets/js/visual_editor.js') }}"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDWdm1zrblFjsdUfi1-6fsPvj30ACCiCxk"></script>
    <script src="{{ asset('assets/js/newCardForm.js') }}"></script>
    <script src="{{ asset('assets/js/editCardForm.js') }}"></script>
    <script src="{{ asset('assets/js/tariff_selector.js') }}"></script>
    {% if not subfields %}<script src="{{ asset('assets/js/get_new_subfields.js') }}"></script>{% endif %}

{% endblock %}

{% block content %}

    <form action="/card/update" method="POST" enctype="multipart/form-data" class="standard_wide">

        <div uk-grid>
            <div class="uk-width-1-2">
                <div class="uk-margin-bottom"><input type="text" name="header" placeholder="Заголовок" class="uk-input" value="{{ card.header }}"></div>
                <div uk-grid class="service_selector">
                    <div class="uk-width-1-2">
                        <button type="button" class="uk-button {{ card.serviceTypeId == 1 ? 'uk-button-primary' : '' }} uk-width-1-1" value="1">Прокат</button>
                    </div>
                    <div class="uk-width-1-2">
                        <button type="button" class="uk-button {{ card.serviceTypeId == 2 ? 'uk-button-primary' : '' }}uk-width-1-1" value="2">Аренда</button>
                    </div>
                    <input type="hidden" name="serviceTypeId" value="{{ card.serviceTypeId }}">
                </div>

                <hr>

                <div class=""><span class="red_star">*</span>Адрес: <span uk-toggle="target: #city_selector">{{ city.header }} <i uk-icon="icon:chevron-down"></i></span></div>

                <div class="expandable_block" id="city_selector" hidden>
                    <div class="uk-text-small">Страна</div>
                    <select name="countryCode" id="countryCode" class="uk-select">
                        {{ include( 'common/ajax_edit_options.html.twig', { 'options': countries, 'id': countryCode }) }}
                    </select>
                    <div class="uk-text-small">Регион</div>
                    <select name="regionId" id="regionId" class="uk-select">
                        {{ include( 'common/ajax_edit_options.html.twig', { 'options': regions, 'id': regionId }) }}
                    </select>
                    <div class="uk-text-small">Город</div>
                    <select name="cityId" id="cityId" class="uk-select">
                        {{ include( 'common/ajax_edit_options.html.twig', { 'options': cities, 'id': card.cityId }) }}
                    </select>
                    <div class="uk-text-small">Адрес</div>
                    <div>
                        <textarea name="address" class="uk-textarea">{{ card.address }}</textarea>
                    </div>
                    <div class="uk-text-small" uk-toggle="target: #map_selector" id="show_map">Карта <i uk-icon="icon:chevron-down"></i></div>
                    <div id="map_selector" hidden>
                        <input type="hidden" name="coords"  value="{{ card.coords  }}">
                        {% set coords = card.coords|split(",") %}
                        {% if coords[1] is not defined %}
                            {% set coords = [55.753410,37.620285] %}
                        {% endif %}
                        <div id="map" data-lat="{{ coords[0] }}" data-lng="{{ coords[1] }}"></div>
                    </div>


                    <input type="hidden" name="streetView">

                </div>

                <hr>

                <div class=""><span class="red_star">*</span>Тип транспорта: <span uk-toggle="target: #general_selector">{{ gt.header }} <i uk-icon="icon:chevron-down"></i></span></div>



                <div class="expandable_block" id="general_selector" hidden>
                    <div uk-grid>
                        <div class="uk-width-1-2">
                            <select name="generalTypeTopLevelId" id="generalTypeTopLevelId" class="uk-select">
                                {{ include( 'common/ajax_edit_options.html.twig', { 'options': generalTopLevel, 'id': generalSecondLevel[card.generalTypeId].getParent.id }) }}
                            </select>
                        </div>

                        <div class="uk-width-1-2">
                            <select name="generalTypeId" id="generalTypeId" class="uk-select">
                                {{ include( 'common/ajax_edit_options.html.twig', { 'options': generalSecondLevel, 'id': generalSecondLevel[card.generalTypeId].id }) }}
                            </select>
                        </div>
                    </div>


                </div>

                <hr>

                <div uk-grid class="uk-grid-small">
                    <div class="uk-width-1-3">
                        <div class="uk-text-small"><span class="red_star">*</span>Группа</div>
                        <select name="groupName" id="markGroupName" class="uk-select">
                            {{ include( 'common/ajax_edit_options.html.twig', { 'options': mark_groups, 'id': model.groupName }) }}
                        </select>
                    </div>

                    <div class="uk-width-1-3">
                        <div class="uk-text-small"><span class="red_star">*</span>Марка</div>
                        <select name="mark" id="markId" class="uk-select">
                            {{ include( 'common/ajax_edit_options.html.twig', { 'options': marks, 'id': mark.id }) }}
                        </select>
                    </div>

                    <div class="uk-width-1-3">
                        <div class="uk-text-small"><span class="red_star">*</span>Модель</div>
                        <select name="modelId" id="markModelId" class="uk-select">
                            {{ include( 'common/ajax_edit_options.html.twig', { 'options': models, 'id': model.id }) }}
                        </select>
                    </div>
                </div>



                <hr>
                <div>
                    Фото: <input type="file" name="fotos[]" multiple> (до 5 одновременно)
                </div>

                <hr>

                <div class="uk-clearfix">
                    {% for price in prices if price.id == 2%}
                        <div class="uk-float-left uk-width-1-2">
                            <input type="number" name="price[{{ price.id }}]" class="uk-input uk-width-1-2"
                                   value="{% for cardPrice in card.getCardPrices if cardPrice.priceId == price.id %}{{ cardPrice.value }}{% endfor %}">
                            ₽ / <span>{{ price.header }} </span>
                        </div>
                    {% endfor %}
                    <span class="uk-float-right" uk-toggle="target: #price_selector">Еще цены <i uk-icon="icon:chevron-down"></i></span>
                </div>
                <div class="expandable_block" id="price_selector" hidden>
                    {% for price in prices if price.id != 2%}
                        <div>
                            <input type="number" name="price[{{ price.id }}]" class="uk-input uk-width-1-5"
                                   value="{% for cardPrice in card.getCardPrices if cardPrice.priceId == price.id %}{{ cardPrice.value }}{% endfor %}">
                            ₽ / <span>{{ price.header }} </span>
                        </div>
                    {% endfor %}
                </div>

            </div>

            <div id="dop_fields" class="uk-width-1-2">

                <div><textarea name="content" class="uk-textarea" placeholder="Описание">{{ card.content }}</textarea></div>

                <hr>

                <div class=""><span uk-toggle="target: #features_selector">Характеристики  <i uk-icon="icon:chevron-down"></i></span></div>

                <div class="expandable_block" id="features_selector" hidden>
                    <div >
                        {% set setFeatures = [] %}
                        {% for cardFeature in card.getCardFeatures %}
                            {% set setFeatures = setFeatures|merge([cardFeature.featureId]) %}
                        {% endfor %}
                        <div>
                            {% for feature in features %}
                                <div>
                                    <b>{{ feature.header }}</b>
                                    <div>
                                        {% for item in feature.getChildren %}
                                            <div>
                                                <label>
                                                    <input class="feature_item" type="checkbox" name="feature[{{ item.id }}]" value="{{  item.id in setFeatures ? '1' : '0' }}"
                                                            {{  item.id in setFeatures ? 'checked' : '0' }}
                                                    > {{ item.header }}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <hr>

                <div class=""><span uk-toggle="target: #subfields">Дополнительно <i uk-icon="icon:chevron-down"></i></span></div>
                <div class="expandable_block" id="subfields" hidden>
                    {% if subfields %}
                        {% for item in subfields %}
                            <div>
                                <div class="uk-text-small">{{ item.label }}</div>
                                {% if item.subfield_last is defined %}
                                    {{ include(item.template, {
                                        'data': item.data,
                                        'subfield_last':item.subfield_last,
                                        'subfield_first':item.subfield_first,
                                        'first':item.first,
                                        'level':item.level,
                                        'field_id': item.field_id
                                    }) }}
                                {% else %}
                                    {{ include(item.template, {
                                        'options': item.value,
                                        'data': item.data,
                                        'subfield':item.subfield,
                                    }) }}
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                <hr>

                <div uk-grid class="uk-grid-small">
                    <div class="uk-width-1-3">
                        <div class="uk-text-small"><span class="red_star">*</span>Состояние</div>
                        <select name="conditionId" class="uk-select">
                            {% for condition in conditions %}
                                <option value="{{ condition.id }}" {{ condition.id == card.conditionId ? 'selected' : '' }}>{{ condition.header }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="uk-width-1-3">
                        <div class="uk-text-small"><span class="red_star">*</span>Цвет</div>
                        <select name="colorId" class="uk-select">
                            {% for color in colors %}
                                <option value="{{ color.id }}" {{ color.id == card.colorId ? 'selected' : '' }}>{{ color.header }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="uk-width-1-3">
                        <div class="uk-text-small"><span class="red_star">*</span>Год выпуска</div>
                        <select name="prodYear" class="uk-select">
                            {% for year in 1950..'now'|date('Y') %}
                                <option value="{{ year }}" {{  year == card.prodYear  ? 'selected' : ''}}>{{ year }}</option>
                            {% endfor %}
                        </select>
                    </div>

                </div>

                <hr>

                <div class="uk-text-small">Видео:</div>
                <input name="video" class="uk-input" value="{{ card.video }}">

                <hr>

                <div uk-grid class="edit_fotos_block uk-grid-small">
                    {% for foto in card.getFotos %}
                        <div class="uk-width-1-5 edit_foto">
                            <div style="background:url('/assets/images/cards/{{ foto.folder }}/{{ foto.id }}.jpg') center center; background-size: cover; height: 80px;" class="uk-position-relative">
                                <button type="button" class="uk-button-danger delete_foto_button" uk-close data-id="{{ foto.id }}"
                                        style="position:absolute;top:0;right:0;color: white;">
                                </button>

                                <button type="button" class="uk-button-default main_foto_button" uk-icon="icon: home" data-id="{{ foto.id }}"
                                        style="position:absolute;top:0;left:0;color: white;"><span></span>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>

        <hr>

        <div id="change_tariff" hidden>
            {{ include(':card:tariff_selector.html.twig', {'tariffId':card.tariff.id}) }}
        </div>


        <input type="hidden" name="tariffId" value="{{ card.tariff.id }}">

        <input type="hidden" name="cardId" value="{{ card.id }}">

        <div class="uk-clearfix uk-margin-top">
        <button class="uk-button uk-button-primary uk-float-left hide_on_change" name="update">Записать</button>
        <button id="tariff_changer" type="button" class="uk-button uk-button-secondary uk-float-left" uk-toggle="target: #change_tariff">Сменить тариф</button>
        <button class="uk-button uk-button-danger uk-float-right" name="delete">Удалить</button>
        </div>

    </form>
{% endblock %}