<div id="search_popup" class="uk-hidden ">



    <div class="popup_city_search uk-inline uk-width-1-1">
        <span class="uk-form-icon" uk-icon="icon: search"></span>
        <input type="text" name="popup_search" class="uk-input uk-width-1-1" placeholder="Город">
    </div>



    <div class="padding20">
        <div class="uk-text-center uk-margin-bottom">
        {% trans %}Наши категории{% endtrans %}:
        </div>
        <div  class=" top_pop_carousel owl-carousel">
            {% for gt in t3_new.getGt if gt.carTypeIds %}
                <div class="uk-width-1-1">
                    <a href="/rent/{{ city.url }}/all/{{ gt.url }}" class="gt_button">
                        <i class="fa fa-{{ gt.icon }}"></i>
                        <br>
                        <span>{{ lang == 'ru' ? gt.header : gt.url }}</span>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

</div>