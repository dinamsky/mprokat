<footer class="uk-margin-top">
    <hr>
    <div class="standard_wide">
        <div class="social_buttons">
            <div uk-grid>
                <div><!-- VK like -->
                    <div id="vk_like"></div>
                    <script type="text/javascript">VK.Widgets.Like("vk_like", {type: "button"});</script>
                </div>
                <div class="vk_share"><!-- VK share -->
                    <script type="text/javascript">document.write(VK.Share.button(false,{type: "round", text: "Поделиться"}));</script>
                </div>
                <div>
                    <div class="fb-like" data-href="{{ app.request.schemeAndHttpHost ~ app.request.requestUri }}" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
                </div>
                <div>
                    <script src="https://apis.google.com/js/platform.js" async defer></script>
                    <g:plusone></g:plusone>
                    <div class="g-plus" data-action="share" data-height="24"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer_info bg_dark">
        <div class="standard_wide c_white">
            <div uk-grid>
                <div class="uk-width-1-4@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Категории</b></div>
                    <a href="/rent/rus/all/cars" class="c_grey">Легковые авто</a>
                    <hr>
                    <a href="/rent/rus/all/bicycles" class="c_grey">Велосипеды</a>
                    <hr>
                    <a href="/rent/rus/all/special-machines" class="c_grey">Спецтехника</a>
                    <hr>
                    <a href="/rent/rus/all/yachts" class="c_grey">Яхты</a>
                    <hr>
                    <a href="/rent/rus/all/bikes" class="c_grey">Мотоциклы</a>
                </div>
                <div class="uk-width-1-4@l uk-visible@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Топ транспорт</b></div>
                    {% for card in t3_new.getTop3 %}
                        {{ include(':footer:top_new_tpl.html.twig', {'card':card}) }}
                    {% endfor %}
                </div>
                <div class="uk-width-1-4@l uk-visible@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Новый транспорт</b></div>
                    {% for card in t3_new.getNew %}
                        {{ include(':footer:top_new_tpl.html.twig', {'card':card}) }}
                    {% endfor %}
                </div>
                <div class="uk-width-1-4@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Информация</b></div>
                        <a href="/news" class="c_grey">Новости</a>
                        <hr>
                        <a href="/contacts" class="c_grey">Контакты</a>
                        <hr>
                        <a href="/article/kak-sdavat-avto" class="c_grey">Сдать свой автомобиль</a>
                    </div>
                </div>
            </div>
            <hr>
            <div class="standard_wide uk-clearfix">
                <div class="uk-float-left">МУЛЬТИПРОКАТ. Москва, Россия. +7(916)455-98-08</div>
                <div class="uk-float-right"><a href="/regions" class="c_grey">Россия. Регионы</a></div>
            </div>
        </div>
    </div>
    <div class="bottom_line bg_black">
        <div class="standard_wide uk-clearfix">
            <div uk-grid>
                <div class="uk-width-2-5@s">&copy; {{ date()|date("Y") }} МультиПрокат | Сервис аренды автотранспорта</div>
