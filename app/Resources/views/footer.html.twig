<footer class="uk-margin-top">



    <div class="footer_info bg_dark">
        <div class="standard_wide c_white">
            <div uk-grid>
                <div class="uk-width-1-4@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Категории</b></div>
                    <a href="/rent/rus/all/cars" class="c_grey">Легковые авто</a>
                    <hr>
                    <a href="/rent/rus/all/bicycles" class="c_grey">Велосипеды</a>
                    <hr>
                    <a href="/rent/rus/all/special-machines" class="c_grey">Спецтехника</a>
                    <hr>
                    <a href="/rent/rus/all/yachts" class="c_grey">Яхты</a>
                    <hr>
                    <a href="/rent/rus/all/bikes" class="c_grey">Мотоциклы</a>
                </div>
                <div class="uk-width-1-4@l uk-visible@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Лучшие предложения</b></div>
                    {% for card in t3_new.getTop3 %}
                        {{ include(':footer:top_new_tpl.html.twig', {'card':card}) }}
                    {% endfor %}
                </div>
                <div class="uk-width-1-4@l uk-visible@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Новые на сайте</b></div>
                    {% for card in t3_new.getNew %}
                        {{ include(':footer:top_new_tpl.html.twig', {'card':card}) }}
                    {% endfor %}
                </div>
                <div class="uk-width-1-4@l">
                    <div class="uk-margin-bottom uk-text-uppercase"><b>Информация</b></div>
                        <a href="/news" class="c_grey">Новости</a>
                        <hr>
                        <a href="/contacts" class="c_grey">Контакты</a>
                        <hr>

                        {% if page_type is defined and general is defined%}
                            <a href="/card/new/{{ general.url }}" class="c_grey">Сдать в {{ general.url == 'special-machines' or general.url == 'airplanes' ? 'аренду' : 'прокат/аренду' }} {{ general.headerSingular|lower }} в {{ city.gde }}</a>
                        {% else %}
                            <a href="/article/kak-sdavat-avto" class="c_grey">Сдать свой автомобиль</a>
                        {% endif %}

                        <hr>


                        <a href="/regions" class="c_grey">Россия. Регионы</a>
                        <hr>
                        <div class="">
                            <a class="c_grey" rel="nofollow" href="https://www.facebook.com/multiprokatcom/"><span uk-icon="icon:facebook"></span></a>
                            &nbsp;
                            <a class="c_grey" rel="nofollow" href="https://twitter.com/multiprokat"><span uk-icon="icon:twitter"></span></a>
                            &nbsp;
                            <a class="c_grey" rel="nofollow" href="https://plus.google.com/u/1/102220936243060868002"><span uk-icon="icon:google-plus"></span></a>
                            &nbsp;
                            <a class="c_grey" rel="nofollow" href="https://www.instagram.com/multiprokat/"><span uk-icon="icon:instagram"></span></a>
                            &nbsp;
                            <a class="c_grey" rel="nofollow" href="https://vk.com/multiprokatcom"><span class="fa fa-vk"></span></a>
                            &nbsp;
                            <a class="c_grey" rel="nofollow" href="https://www.youtube.com/channel/UCj-igu9KFIbzdzVCezy1qFg"><span uk-icon="icon:youtube"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if generalTypes is defined and city is defined and not is_mobile() %}
    <div class="mid_footer">
        <div class="standard_wide c_white">
            <div uk-grid class="uk-grid-small">
                {% for gt in generalTypes %}
                    <div class="uk-width-1-3"><a href="/rent/{{ city.url }}/all/{{ gt.url }}" class="uk-text-small c_grey">{{ gt.url == 'special-machines' or gt.url == 'airplanes' ? 'Аренда' : 'Прокат и аренда' }} {{ gt.chegoPlural }} в {{ city.gde }}</a></div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <div class="bottom_line bg_black">
        <div class="standard_wide uk-clearfix">
            <div uk-grid>
                <div class="uk-width-2-5@s">&copy; {{ date()|date("Y") }} МультиПрокат | Сервис аренды автотранспорта</div>
                <div class="uk-width-2-5@s">
                    <a href="/article/term-conditions" class="c_grey">Условия и положения</a> /
                    <a href="/article/politika-konfidentsialnosti" class="c_grey">Конфиденциальность</a>
                </div>

            </div>
        </div>
    </div>
</footer>

{% if is_mobile() %}
    {% include 'left_bar.html.twig' %}
{% endif %}