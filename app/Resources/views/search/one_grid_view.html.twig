<div class="bordered uk-position-relative">
    <a href="/card/{{ card.id }}" style="background:url('/assets/images/cards/{% for foto in card.getFotos if foto.isMain %}{{ foto.folder }}/t/{{ foto.id }}.jpg{% endfor %}') center center;
            background-size: cover;
            height: {{ height }};
            display: block;">
    </a>
    <div class="padding20">
        <a class="uk-text-truncate uk-display-block" href="/card/{{ card.id }}">{{ card.header }}</a>
        <div class="uk-clearfix">
            <div class="uk-float-left">
                {% for price in card.cardPrices if price.priceId == 2 %}
                    {{ price.value|number_format(0,'.','<span class="thousand_separator"></span>')|raw }} ₽ / день
                {% endfor %}
            </div>
            <div class="uk-float-right">
                <i class="fa fa-eye"></i> {{ card.views }}
            </div>
        </div>
    </div>

    {% if app.session.has('admin') or (app.session.has('logged_user') and card.user.id == app.session.get('logged_user').id) %}
        <form action="/card/update" method="POST" style="position: absolute;top:0;right:0;">
            <input type="hidden" name="cardId" value="{{ card.id }}">
            <button class="uk-button-danger c_white" name="delete" uk-close></button>
        </form>
        <a class="uk-button-primary uk-position-top-left icon_button" href="/user/edit/card/{{ card.id }}" ><i class="fa fa-pencil"></i></a>
    {% endif %}
</div>

