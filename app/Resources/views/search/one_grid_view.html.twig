<div class="bordered uk-position-relative">

    {% set main_foto = main_foto(card.getFotos) %}

    {% set bgrnd = 'white' %}

    {% if main_foto  %}
        {% set bgrnd = 'url(/assets/images/cards/'~main_foto.folder~'/t/'~main_foto.id~'.jpg)' %}
    {% elseif card.fotos[0] is defined %}
        {% set bgrnd = 'url(/assets/images/cards/'~card.fotos[0].folder~'/t/'~card.fotos[0].id~'.jpg)' %}
    {% else %}
        {% set bgrnd = 'url(/assets/images/interface/no_image.jpg)' %}
    {% endif %}


    {% set serviceType = 'Прокат' %}
    {% if card.serviceTypeId == 2  %}
        {% set serviceType = 'Аренда' %}
    {% endif %}


    {% set currency = {
        'RUB': '<i class="fa fa-ruble"></i>',
        'EUR': '<i class="fa fa-euro"></i>',
        'USD': '<i class="fa fa-dollar"></i>'
    } %}


    <a target="_blanc" id="card_img_{{ card.id }}" href="/card/{{ card.id }}" style="background: {{ bgrnd }} center center;
            background-size: cover;
            height: {{ height }};
            display: block;
            position: relative;"
    >
        <div class="card_grid_price">

            {% set c_price = '' %}
            {% set c_ed = '' %}

            {% for price in card.cardPrices if price.priceId == 2 %}

                {% set c_price = price.value %}
                {% set c_ed = '/'~'день'|trans %}
            {% endfor %}

            {% for price in card.cardPrices if price.priceId == 1 and c_price == '' %}

                {% set c_price = price.value %}
                {% set c_ed = '/'~'час'|trans %}
            {% endfor %}

            {% for price in card.cardPrices if price.priceId == 6 and c_price == '' %}

                {% set c_price = price.value %}
                {% set c_ed = '' %}
            {% endfor %}

            {% if c_price != '' %}
            <b>{{ c_price|number_format(0,'.','<span class="thousand_separator"></span>')|raw }}</b> {{ currency[card.currency]|raw }} <span class="">{{ c_ed }}</span>
            {% endif %}

        </div>
    </a>




    <div class="padding20 bg_darkgrey uk-position-relative" style="padding-top: 28px">
        <a target="_blanc" class="uk-text-truncate uk-display-block uk-position-relative c_white" href="/card/{{ card.id }}" title="{{ serviceType }} {% if card.generalType.chegoSingular is defined %}{{ card.generalType.chegoSingular }}{% else %}{% endif %} {{ card.markModel.Mark.header }} {{ card.markModel.header }} в {{ card.city.gde }}">
            {{ card.markModel.Mark.header }} {{ card.markModel.header }}
        </a>
        {#<div class="uk-text-truncate uk-text-small c_grey"></div>#}
        <div uk-grid class="uk-grid-collapse">
            <div class="uk-width-expand uk-text-truncate uk-text-small c_grey {{ micro is defined ? 'micro' : '' }}">
                <i class="fa fa-map-marker"></i> {{ card.city.header }}
            </div>
            <div class="uk-width-auto uk-text-small c_grey {{ micro is defined ? 'micro' : '' }}"><i class="fa fa-eye"></i> {{ card.views }}</div>
        </div>

        {% if card.dateRentFinish > date() %}
            <div class="reserved">бронь до {{ card.dateRentFinish|date("d.m.Y") }}</div>
        {% endif %}

        {#<div id="zzz">{{ dump(card.user.__isInitialized__) }}</div>#}


            {% if card.user.accountTypeId == 1 %}
            <div
                    uk-tooltip="title:Пользователь с аккаунтом PRO"
            style="position: absolute;
            top: 7px;
            right: 7px;">
                <img src="/assets/images/interface/fb3.svg" alt="" style="width: 16px">
            </div>
            {% endif %}

    </div>



    {% if share is defined %}
        <a href="/card_share/{{ card.id }}" class="bottom_share">Разместить в своих соцсетях</a>
        <div class="uk-text-center uk-text-small">Ваш тариф: "
        {{ card.tariffId == 1 ? 'Стандарт' }}
        {{ card.tariffId == 2 ? 'Экспресс' }}
        {{ card.tariffId == 3 ? 'Премиум' }}"
        </div>
        <div class="uk-text-center">
            <a href="/promote_card/{{ card.id }}" class="promote_card_link">Продвинуть</a>
        </div>
    {% endif %}


    {% if (
       ( app.session.has('admin') and card.adminId == app.session.get('admin').id )
       or ( app.session.has('admin') and app.session.get('admin').role == 'superadmin' )
       or ( app.session.has('logged_user') and card.user.id == app.session.get('logged_user').id )
    ) %}
        {% if in_edit is not defined %}
            <form action="/card/update" method="POST" style="position: absolute;top:0;right:0;" onsubmit="return confirm('Вы уверены?');">
                <input type="hidden" name="cardId" value="{{ card.id }}">
                <input type="hidden" name="return" value="{{ app.request.requestUri }}">
                <button class="uk-button-danger c_white" name="delete" uk-close></button>
            </form>
            <a class="uk-button-primary uk-position-top-left icon_button" href="/user/edit/card/{{ card.id }}" ><i class="fa fa-pencil"></i></a>
        {% endif %}
    {% endif %}
</div>

