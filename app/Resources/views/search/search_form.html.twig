<form id="searchForm" action="/search" method="GET">

    <div class="uk-text-small">Местоположение</div>
    <select name="countryCode" id="countryCode" class="uk-select">
        <option value="0">-выберите страну-</option>
        {% for country_code, country_title in countries %}
            <option value="{{ country_code }}" {{ country_code == countryCode ? 'selected' : '' }}>{{ country_title }}</option>
        {% endfor %}
    </select>
    <select name="regionId" id="regionId" class="uk-select">
        {{ include( 'common/ajax_edit_options.html.twig', { 'options': regions, 'id': regionId }) }}
    </select>
    <select name="cityId" id="cityId" class="uk-select">
        {{ include( 'common/ajax_edit_options.html.twig', { 'options': cities, 'id': cityId }) }}
    </select>

    <div class="uk-text-small uk-margin-top">Тип транспорта</div>
    <select name="pgtId" id="generalTypeTopLevelId" class="uk-select">
        {{ include( 'common/ajax_edit_options.html.twig', { 'options': generalTopLevel, 'id': pgtid }) }}
    </select>
    <select name="gtId" id="generalTypeId" class="uk-select">
        {{ include( 'common/ajax_edit_options.html.twig', { 'options': generalSecondLevel, 'id': gtid }) }}
    </select>


    <div class="uk-text-small uk-margin-top">Марка и модель</div>
    <select name="groupName" id="markGroupName" class="uk-select">
        <option value="0">-выберите группу-</option>
        {% for group_name, group_title in mark_groups %}
            <option value="{{ group_name }}" {{ group_name == model.groupName ? 'selected' : '' }}>{{ group_title }}</option>
        {% endfor %}
    </select>
    <select name="mark" id="markId" class="uk-select">
        {{ include( 'common/ajax_edit_options.html.twig', { 'options': marks, 'id': mark.id }) }}
    </select>
    <select name="modelId" id="markModelId" class="uk-select">
        {{ include( 'common/ajax_edit_options.html.twig', { 'options': models, 'id': model.id }) }}
    </select>




    <input type="hidden" name="view" value="{{ view is defined ? view : 'grid_view' }}">

    <button class="uk-button uk-button-primary uk-margin-top uk-width-1-1">Найти</button>

</form>