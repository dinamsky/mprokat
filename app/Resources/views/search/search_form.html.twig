<form id="searchForm" action="/search" method="GET">


    <div>{{ include('selector/adress_block.html.twig') }}</div>



    <div>{{ include('selector/general_block.html.twig') }}</div>



    <div>{{ include('selector/mark_block.html.twig') }}</div>




    <input type="hidden" name="view" value="{{ view is defined ? view : 'grid_view' }}">

    <button data-page="{{ page is defined ? page : 1 }}"
            data-view="{{ view is defined ? view : 'grid_view' }}"
            data-onpage="{{ onpage is defined ? onpage : 12 }}"
            id="main_search_button"
            type="button"
            class="uk-button uk-button-primary uk-margin-top uk-width-1-1">
        Найти
    </button>

</form>