<input type="hidden" id="modelURL" name="modelURL" value="{{ model.header }}">

<div uk-toggle="target: #model_popular" >
    <span class="model_selector">{{ model ? model.header : 'Модель' }}</span>
    <i uk-icon="icon:chevron-down"></i>
</div>

<div id="model_popular" class="uk-modal-container" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <h2 class="uk-modal-title">Выберите Модель</h2>

        <div class="uk-column-1-5">
            <div class="model_block uk-margin-bottom" data-url="" data-header="Любая модель">Любая модель</div>
            {% if model_arr[mark_id] is defined %}
            {% for model in model_arr[mark_id] %}
                <div class="model_block" data-url="{{ model.header }}" data-header="{{ model.header }}">{{ model.header }} {{ model.total }}</div>
            {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
