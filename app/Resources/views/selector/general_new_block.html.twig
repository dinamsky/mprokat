<input type="hidden" name="gtURL" id="gtURL" value="{{ general.url }}">

<div uk-toggle="target: #gt_popular">
    <span  class="pop_gt_selector">{{ general ? general.header : 'Тип транспорта' }}</span>
    <i uk-icon="icon:chevron-down"></i>
</div>

<div id="gt_popular" class="uk-modal-container" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <h2 class="uk-modal-title">Выберите тип транспорта</h2>

        <div class="uk-column-1-5">
            <div class="gt_selector uk-margin-bottom" data-id="0" data-url="" data-header="Любой тип транспорта">Любой тип транспорта</div>
            {% for gt in generalTypes %}
                <div class="gt_selector" data-id="{{ gt.id }}" data-url="{{ gt.url }}" data-header="{{ gt.header }}"><i class="fa fa-{{ gt.icon }}"></i> {{ gt.header }}</div>
            {% endfor %}
        </div>

    </div>
</div>