<input type="hidden" id="markURL" name="markURL" value="{{ mark.header }}" data-id="{{ mark.id }}">

<div uk-toggle="target: #mark_popular">
    <span  class="mark_selector">{{ mark and mark.header ? mark.header : 'Любая марка' }}</span>
    <i uk-icon="icon:chevron-down"></i>
</div>

<div id="mark_popular" class="uk-modal-container" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <h2 class="uk-modal-title">Выберите марку</h2>

        <div class="uk-column-1-5">
            <div class="mark_block uk-margin-bottom" data-id="0" data-url="" data-header="Любая марка">Любая марка</div>
            {% for mark in mark_arr[type]|slice(0,50) %}
                <div class="mark_block" data-id="{{ mark.mark.id }}" data-url="{{ mark.mark.header }}" data-header="{{ mark.mark.header }}">{{ mark.mark.header }} </div>
            {% endfor %}
        </div>
        <hr>
        <button uk-toggle="target: #more_marks" type="button" class="more_cities_button">показать все марки</button>
        <div id="more_marks" hidden>
            <div class="uk-column-1-5">
                {% for mark in mark_arr[type]|slice(50) %}
                    <div class="mark_block" data-id="{{ mark.mark.id }}" data-url="{{ mark.mark.header }}" data-header="{{ mark.mark.header }}">{{ mark.mark.header }} </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
