<header class="page-header">
    <div class="page-header__top">
        <div class="uk-child-width-1-2" uk-grid>
            <div>

            </div>
            <div>

            </div>
        </div>
    </div>

</header>


{% if is_mobile() %}
	{{ include('mobile_header.html.twig') }}

{% else %}
<input type="hidden" id="cityURL" name="cityURL" value="{{ city.url }}">
<input type="hidden" id="cityId" name="cityId" value="{{ city.id }}">
<section class="header">
	<div class="header-top">
		<div class="container">
			<div class="inner">
				{% if not is_mobile() %}
					{{ include('selector/global_city_selector.html.twig') }}
				{% endif %}
				<div class="how-it-works">
					<a href="/faq">Как это работает?</a>
				</div>
				{{ include('user/auth_button_modal.html.twig') }}
				<div id="search_block" hidden>{{ include('search/top_search.html.twig') }}</div>
			</div>
		</div>
	</div>
	<div class="header-bottom">
		<div class="container">
			<div class="inner">
				<div class="logo">
					<a href="/">
						<img src="/assets/images/interface/logo.png" alt="logo" />
					</a>
				</div>
				<div class="search">
					<a class="search_popup_trigger" class="icon">
						<svg
							width="20"
							height="20"
							viewBox="0 0 20 20"
							fill="none"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path
								d="M14.2857 12.5714H13.3714L13.0286 12.2286C14.1715 10.9714 14.8572 9.25714 14.8572 7.42857C14.8571 3.31429 11.5429 0 7.42857 0C3.31429 0 0 3.31429 0 7.42857C0 11.5429 3.31429 14.8571 7.42857 14.8571C9.25714 14.8571 10.9714 14.1714 12.2286 13.0286L12.5714 13.3714V14.2857L18.2857 20L20 18.2857L14.2857 12.5714ZM7.42857 12.5714C4.57143 12.5714 2.28571 10.2857 2.28571 7.42857C2.28571 4.57143 4.57143 2.28571 7.42857 2.28571C10.2857 2.28571 12.5714 4.57143 12.5714 7.42857C12.5714 10.2857 10.2857 12.5714 7.42857 12.5714Z"
								fill="#474747"
							/>
						</svg>
					</a>
					{{ include('search_popup.html.twig') }}
				</div>
				{% if app.session.has('logged_user') %}
					<a href="/card/new" class="btn btn-outline">Сдать в аренду</a>
				{% elseif app.session.has('admin') %}
					<a href="/card/new" class="btn btn-outline">Сдать в аренду</a>
				{% else %}
					<a class="btn btn-outline" data-toggle="modal" href="#signUp">Сдать в аренду</a>
				{% endif %}
			</div>
		</div>
	</div>
</section>
{% endif %}



