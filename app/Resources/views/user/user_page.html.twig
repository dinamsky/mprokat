{% extends 'base.html.twig' %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/showCard.js') }}"></script>
    <script src="{{ asset('assets/js/left_selector.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="user_page_top_line_1">
        <div class="standard_wide">
            <div uk-grid>
                <div class="uk-visible@s uk-width-1-5@s" ></div>
                <div class="uk-width-4-5@s">
                    <h1 class="c_white uk-margin-remove">{{ user.header }}</h1>
                    {% for info in user.information %}
                        {% if info.uiKey == 'vk' and info.uiValue != '' %}<a rel="nofollow" href="{{ info.uiValue }}" class="c_white padding0-10"><i class="fa fa-vk"></i></a>{% endif %}
                        {% if info.uiKey == 'fb' and info.uiValue != '' %}<a rel="nofollow" href="{{ info.uiValue }}" class="c_white padding0-10"><i class="fa fa-facebook"></i></a>{% endif %}
                        {% if info.uiKey == 'ok' and info.uiValue != '' %}<a rel="nofollow" href="{{ info.uiValue }}" class="c_white padding0-10"><i class="fa fa-odnoklassniki"></i></a>{% endif %}
                        {% if info.uiKey == 'tw' and info.uiValue != '' %}<a rel="nofollow" href="{{ info.uiValue }}" class="c_white padding0-10"><i class="fa fa-twitter"></i></a>{% endif %}
                        {% if info.uiKey == 'gp' and info.uiValue != '' %}<a rel="nofollow" href="{{ info.uiValue }}" class="c_white padding0-10"><i class="fa fa-google-plus"></i></a>{% endif %}
                        {% if info.uiKey == 'ig' and info.uiValue != '' %}<a rel="nofollow" href="{{ info.uiValue }}" class="c_white padding0-10"><i class="fa fa-instagram"></i></a>{% endif %}
                        {% if info.uiKey == 'yt' and info.uiValue != '' %}<a rel="nofollow" href="{{ info.uiValue }}" class="c_white padding0-10"><i class="fa fa-youtube"></i></a>{% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="user_page_top_line_2">
        <div class="standard_wide">
            <div uk-grid>
                <div class="uk-visible@s uk-width-1-5@s">
                    {% if user_foto %}
                        <div style="background: url('{{ user_foto }}') center center no-repeat;
                                background-size: contain;
                                width: 155px;
                                height: 155px;
                                display: inline-block;
                                top: -120px;
                                position: relative;
                                ">
                        </div>
                    {% else %}
                        <div style="
                                background-size: contain;
                                width: 155px;
                                height: 155px;
                                display: inline-block;
                                top: -120px;
                                position: relative;
                                border: 1px solid lightgrey;
                                ">
                        </div>
                    {% endif %}
                </div>
                <div class="uk-width-4-5@s">
                    {#<div uk-grid class="uk-grid-collapse">#}
                        {#<div class="uk-width-1-4 uk-width-1-6@s uk-text-small"><i class="fa fa-envelope"></i> Email</div>#}
                        {#<div class="uk-width-3-4"><a href="mailto:{{ user.email }}">Написать</a></div>#}
                    {#</div>#}
                    {#<div uk-grid class="uk-grid-collapse">#}
                        {#<div class="uk-width-1-4 uk-width-1-6@s uk-text-small"><i class="fa fa-phone"></i> Телефон</div>#}
                        {#<div class="uk-width-3-4">#}
                            {#<div class="phone_block">#}
                            {#{% if app.session.get('phone')[user.id] is not defined and user.cards[0] is defined %}#}
                                {#<span class="hidden_phone">#}
                                    {#<i class="fa fa-phone"></i> {% for info in user.information if info.uiKey == 'phone' %}{{ info.uiValue|slice(0,5) }}*******{% endfor %}#}
                                {#</span>#}
                                {#<button class="uk-button-primary show_phone_big" type="button" data-card_id="{{ user.cards[0].id }}">Показать</button>#}
                            {#{% else %}#}
                                {#<span class="opened_phone">#}
                                {#<i class="fa fa-phone"></i> {% for info in user.information if info.uiKey == 'phone' %}{{ info.uiValue }}{% endfor %}#}
                            {#</span>#}
                            {#{% endif %}#}
                            {#</div>#}
                        {#</div>#}
                    {#</div>#}
                    <div class="uk-margin-bottom card_page_phone uk-width-1-3">
                        <div uk-grid class="uk-grid-collapse uk-grid-match">
                            <div class="phone_block uk-width-5-6">
                                {% if app.session.get('phone')[user.id] is not defined %}
                                    <div class="hidden_phone bg_green show_phone uk-text-center c_white" data-card_id="{{ user.cards[0].id }}">
                                        <div class="uk-text-center">Показать телефон</div>
                                        <i class="fa fa-phone"></i> {% for info in user.information if info.uiKey == 'phone' %}{{ info.uiValue|slice(0,5) }} XXX-XX-XX{% endfor %}
                                    </div>

                                {% else %}
                                    <span class="opened_phone bg_green c_white uk-text-center">
                                    <i class="fa fa-phone"></i> {% for info in card.user.information if info.uiKey == 'phone' %}{{ info.uiValue }}{% endfor %}
                                </span>
                                {% endif %}
                            </div>
                            <div class="uk-width-1-6">
                                <div class="bg_green user_form_button" uk-toggle="target: #user_message_form"><i class="fa fa-commenting"></i></div>
                            </div>
                        </div>
                    </div>

                    <div id="user_message_form" class="uk-modal" uk-modal>
                        <div class="uk-modal-dialog uk-modal-body">
                            <h2 class="uk-modal-title">Сообщение пользователю</h2>
                            <button class="uk-modal-close-default" type="button" uk-close></button>
                            <form action="/user/sendMessage" uk-grid class="uk-grid-small" method="POST">
                                <div class="uk-width-1-1"><input type="text" name="name" class="uk-input" placeholder="Имя"></div>
                                <div class="uk-width-1-1"><input type="text" name="phone" class="uk-input uk-width-1-1" placeholder="Телефон"></div>
                                <div class="uk-width-1-1"><input type="text" name="email" class="uk-input" placeholder="Email" required></div>
                                <div class="uk-width-1-1"><textarea name="message" class="uk-width-1-1 short_textarea" placeholder="Сообщение" required></textarea>
                                </div>
                                <input type="hidden" name="card_id" value="{{ user.cards[0].id }}">
                                <div class="uk-width-1-1">
                                    <button class="uk-button uk-button-default uk-width-1-1">Отправить</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div id="user_phone_form" class="uk-modal" uk-modal>
                        <div class="uk-modal-dialog uk-modal-body">
                            <button class="uk-modal-close-default" type="button" uk-close></button>
                            <div class="modal_name"><i class="fa fa-user"></i> {{ user.header }}</div>
                            <div class="modal_phone"></div>
                            <hr>
                            <div class="modal_text tx_19">
                                Не забудьте сообщить владельцу, что звоните с сайта Мультипрокат и спросить скидку!
                            </div>
                        </div>
                    </div>

                    {#{% for info in user.information if info.uiKey == 'website' %}#}
                    {#<div uk-grid class="uk-grid-collapse">#}
                        {#<div class="uk-width-1-4 uk-width-1-6@s uk-text-small"><i class="fa fa-globe"></i> Website</div>#}
                        {#<div class="uk-width-3-4"><a rel="nofollow" href="{{ info.uiValue }}">{{ info.uiValue }}</a></div>#}
                    {#</div>#}
                    {#{% endfor %}#}
                </div>
            </div>
        </div>
    </div>

    <div class="standard_wide uk-margin-large">
        <h2 class="pf_style_header"><span>Объявления пользователя: {{ user.cards|length }}</span></h2>
        <div uk-grid class="uk-grid-small uk-grid-match uk-margin-large-bottom">
            {% for card in user.cards %}
                <div class="uk-width-1-4@s">
                    {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                </div>
            {% endfor %}
        </div>
    </div>



{% endblock %}