{% if not app.session.has('logged_user') and not app.session.has('admin')%}

<div class="modal fade" id="signIn" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-body">
				<form action="/userSignIn" method="POST">
					<h2 class="modal-title">{% trans %}Вход{% endtrans %}</h2>
					<div class="mat-form">
						<div class="mat-group">
							<label for="email" class="mat-label">Ваш e-mail</label>
							<input type="email" name="email" class="mat-input" id="email" />
						</div>
						<div class="mat-group">
							<label for="password" class="mat-label">Ваш пароль</label>
							<input
								type="password"
								name="password"
								class="mat-input password-input"
								id="password"
							/>
							<a href="#" class="password-control"></a>
						</div>
						<input type="hidden" name="return" value="{{ app.request.requestUri }}">
					</div>
					<div class="text-right">
						<a
							href="#fogotPassword"
							class="link-underline small"
							data-toggle="modal"
							data-dismiss="modal"
							>Забыли пароль?</a
						>
					</div>
					<div class="modal-buttons">
						<button type="submit" class="btn btn-solid">Войти</button>
						<button class="btn btn-outline" href="#signUp" data-toggle="modal" data-dismiss="modal">
							Зарегистрироваться
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
