{% extends 'base.html.twig' %}


{% block content %}
    <div class="standard_wide">
    <div uk-grid class="uk-grid-match">
        {% for card in cards %}
            <div class="uk-width-1-5">
                <div class="bordered">
                    <div style="background:url('/assets/thumbs/{% for foto in card.getFotos if foto.isMain %}{{ foto.id }}{% endfor %}.jpg') center center;
                            background-size: cover;
                            height: 100px;">
                    </div>
                    <div class="padding20">
                        <a href="/card/{{ card.id }}">{{ card.header }}</a>
                        <div>
                            {{ card.getCity.header }}, {{ card.getCity.getParent.header }}, {{ card.getCity.country }}
                        </div>
                        <div>
                            {{ card.getMarkModel.getParent.header }} {{ card.getMarkModel.header }}
                        </div>
                        <div>
                            <a class="uk-button uk-button-primary uk-width-1-1" href="/user/edit/card/{{ card.id }}">Редактировать</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
    </div>
{% endblock %}