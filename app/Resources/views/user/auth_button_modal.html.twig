<div class="top_user_actions">
    {% if app.session.get('logged_user').header is defined %}
        <a href="/user"><span uk-icon="icon:user"></span> {{ app.session.get('logged_user').header }}</a>
        <a href="/userLogout" class=""><span uk-icon="icon:sign-out"></span> Выход</a>
    {% elseif app.session.get('admin').email is defined %}
        <a href="/admin"><span uk-icon="icon:user"></span> {{ app.session.get('admin').email }}</a>
        <a href="/adminLogout" class=""><span uk-icon="icon:sign-out"></span> Выход</a>
    {% else %}
        <div  uk-toggle="target: #sign_in" class="top_user_actions_button"><span uk-icon="icon:sign-in"></span> Войти</div>
        <div  uk-toggle="target: #sign_up" class="top_user_actions_button"><span uk-icon="icon:lock"></span>Регистрация</div>
    {% endif %}
</div>





<div id="sign_in" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <h2 class="uk-modal-title">Вход</h2>
        <form action="/userSignIn" method="POST">
            <input type="text" name="email" placeholder="login">
            <input type="password" name="password" placeholder="password">
            <button>Войти</button>
        </form>
    </div>
</div>

<div id="sign_up" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <h2 class="uk-modal-title">Регистрация</h2>
        <form action="/userSignUp" method="POST">
            <input type="text" name="header" placeholder="name">
            <input type="text" name="email" placeholder="email" required>
            <input type="password" name="password" placeholder="password" required>
            <button>Зарегистрироваться</button>
        </form>
    </div>
</div>