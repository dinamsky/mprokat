<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block stylesheets %}
            <link href="{{ asset('assets/css/uikit.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/base.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/font-awesome.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/colors.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/typo.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/base-responsive.css') }}" rel="stylesheet" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}" />
        <title>{% block title %}Мультипрокат{% endblock %}</title>

    </head>
    <body>

        <header>
            <div class="top_line bg_blue">
                <div class="standard_wide uk-clearfix">
                    <div class="uk-float-left top_sc_links uk-visible@s">
                        <a href="https://www.facebook.com/multiprokatcom/"><span uk-icon="icon:facebook"></span></a>
                        <a href="https://twitter.com/multiprokat"><span uk-icon="icon:twitter"></span></a>
                        <a href="https://plus.google.com/u/1/102220936243060868002"><span uk-icon="icon:google-plus"></span></a>
                        <a href="https://www.instagram.com/multiprokat/"><span uk-icon="icon:instagram"></span></a>
                        <a href="https://vk.com/multiprokatcom">vk</a>
                        <a href="https://www.youtube.com/channel/UCj-igu9KFIbzdzVCezy1qFg"><span uk-icon="icon:youtube"></span></a>
                        <a href="mailto:mail@multiprokat.com"><span uk-icon="icon:mail"></span></a>
                    </div>
                    <div class="uk-float-right">
                        {{ include('user/auth_button_modal.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="top_sticky" uk-sticky>
                <div class="standard_wide">
                    <div uk-grid>
                        <div class="uk-width-1-2"><a href="/"><img class="logo" src="/assets/images/interface/logo.png" alt=""></a></div>
                        <div class="uk-width-1-2 uk-text-right">
                            {% if app.session.has('logged_user') %}
                                <a href="/card/new" class="uk-button uk-button-success uk-button-small">+ Добавить объявление</a>
                            {% elseif app.session.has('admin') %}
                                <a href="/card/new" class="uk-button uk-button-success uk-button-small">+ Добавить объявление</a>
                            {% else %}
                                <a uk-toggle="target: #sign_in" class="uk-button uk-button-success uk-button-small">+ Добавить объявление</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </header>


        <div id="content" class="standard_wide uk-margin-top">
            
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div id="main_message" uk-alert class="uk-position-absolute uk-position-center uk-width-1-3">
                        <a class="uk-alert-close" uk-close></a>
                        <div class="flash-{{ label }}">
                            {{ message|raw }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
            <div uk-grid>
                <div class="uk-width-1-5">{% block left_block %}{{ include('user/user_left.html.twig') }}{% endblock %}</div>
                <div class="uk-width-4-5">{% block content %}{% endblock %}</div>
            </div>
        </div>

        <footer class="uk-margin-top">
            <div class="footer_info bg_dark">
                <div class="standard_wide c_white">
                    <div uk-grid>
                        <div class="uk-width-1-4@l">
                            МУЛЬТИПРОКАТ<br>
                            Москва, Россия<br>
                            +7(916)455-98-08
                        </div>
                        <div class="uk-width-1-4@l uk-visible@l">
                            <div class="uk-margin-bottom">Топ</div>
                            {% for card in t3_new.getTop3 %}
                                {{ include(':footer:top_new_tpl.html.twig', {'card':card}) }}
                            {% endfor %}
                        </div>
                        <div class="uk-width-1-4@l uk-visible@l">
                            <div class="uk-margin-bottom">Новый транспорт</div>
                            {% for card in t3_new.getNew %}
                                {{ include(':footer:top_new_tpl.html.twig', {'card':card}) }}
                            {% endfor %}
                        </div>
                        <div class="uk-width-1-4@l">
                            <div>
                                <a href="/news" class="c_white">> Новости</a>
                            </div>
                            <div>
                                <a href="/contacts" class="c_white">> Контакты</a>
                            </div>
                            <div>
                                <a href="/article/kak-sdavat-avto" class="c_white">> Сдать свой автомобиль</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom_line bg_black">
                <div class="standard_wide uk-clearfix">
                    <div class="uk-float-left c_white">&copy; {{ date()|date("Y") }} МультиПрокат | Сервис аренды автотранспорта</div>
                    <div class="uk-float-right c_white">
                        <a href="/article/term-conditions" class="c_white">Условия и положения</a> /
                        <a href="/article/politika-konfidentsialnosti" class="c_white">Конфиденциальность</a>
                    </div>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset('assets/js/uikit.min.js') }}"></script>
            <script src="{{ asset('assets/js/uikit-icons.min.js') }}"></script>
            <script src="{{ asset('assets/js/signup_validate.js') }}"></script>
        {% endblock %}

