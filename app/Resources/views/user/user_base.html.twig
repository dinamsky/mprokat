<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Мультипрокат{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="yandex-verification" content="a2d59e156f2bd014">

    <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}">

    {% block stylesheets %}
        <link href="{{ asset('assets/css/uikit.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link href="{{ asset('assets/css/styles.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/alex/common.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/alex/profile/profile-main.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body class="{{ is_mobile() ? 'mobile' : 'desktop' }} {% block bodyClass %}{% endblock %}">
{{ include('header.html.twig') }}
<div id="content" class="standard_wide {{ is_mobile() ? '' : 'uk-margin-top' }}">
    {% for label, messages in app.flashes %}
    {% for message in messages %}
    <div id="main_message" uk-alert class="uk-position-absolute uk-position-center uk-width-1-3@s">
        <a class="uk-alert-close" uk-close></a>
        <div class="flash-{{ label }}">
            {{ message|raw }}
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", function(event) {
                setTimeout(function() {
                    UIkit.alert('#main_message').close();
                }, 3000);
            });
        </script>
    </div>
    {% endfor %}
    {% endfor %}


    {% block content %}{% endblock %}

</div>
{{ include('footer.html.twig') }}
{% block javascripts %}
    <script src="{{ asset('assets/js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('assets/js/uikit.min.js') }}"></script>
    <script src="{{ asset('assets/js/uikit-icons.min.js') }}"></script>
    <script src="{{ asset('assets/js/scripts.min.js') }}"></script>
    <script src="{{ asset('assets/js/signup_validate.js') }}"></script>
    <script src="{{ asset('assets/js/user_notify.js') }}"></script>
    <script src="{{ asset('assets/css/alex/common.js') }}"></script>
{% endblock %}
{{ include('counters.html.twig') }}
{{ include('user/auth_modals.html.twig') }}


