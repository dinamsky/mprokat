                                <input class="theme-form-control" id="form-profile-name" name="header" type="text" value="{{ user.header }}" required>
                            </div>

                            <div class="uk-margin-medium theme-form-group{% if user.email|length %} theme-form-group-active{% endif %} js-form-group">
