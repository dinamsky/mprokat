<div id="left_bar" uk-offcanvas>

    <div class="uk-offcanvas-bar">

        <div class="uk-clearfix">
            {{ include('user/auth_left_bar.html.twig') }}
        </div>

        <div class="uk-margin-top">
            <button class="uk-button uk-button-primary uk-width-1-1" uk-toggle="target: #left_search">Поиск</button>
        </div>



        <div class="" id="left_search" hidden>
            <form uk-grid id="main_search_form_left" class="uk-grid-small">
                <div class="uk-width-1-1 uk-position-relative">
                    <div class="uk-hidden@s uk-text-small c_white">Город</div>
                    <div class="top_selector_box">{{ include('selector/adress_block2.html.twig', {'left_block': '1'}) }}</div>
                </div>

                <div class="uk-width-1-1 uk-position-relative" >
                    <div class="uk-hidden@s uk-text-small c_white">Марка</div>
                    <div class="top_selector_box" id="mark_placement_left">{{ include('selector/mark_block2.html.twig', {'mark_arr':mark_arr_sorted, 'type':'1', 'left_block': 1}) }}</div>
                </div>

                <div class="uk-width-1-1 uk-position-relative" >
                    <div class="uk-hidden@s uk-text-small c_white">Модель</div>
                    <div class="top_selector_box" id="model_placement_left">{{ include('selector/model_block2.html.twig', {'model_arr':models_in_mark, 'mark_id':mark.id, 'left_block': 1}) }}</div>
                </div>

                <div class="uk-width-1-1">
                    <button id="main_search_button_left" type="button" class="uk-button uk-button-primary uk-width-1-1">Найти</button>
                </div>
            </form>
            <hr>
        </div>


        <div class="uk-margin-top">
            {% for gt in generalTypes|slice(0,4) if gt.carTypeIds%}
                <div class="left_gtypes">
                    <a href="/rent/{{ in_city }}/all/{{ gt.url }}" class=""><i class="fa fa-{{ gt.icon }} left_gt_icon"></i> {{ gt.header }}</a>
                </div>
            {% endfor %}
            <div class="uk-text-center cursor-pointer  left_bar_more" uk-toggle="target: #left_more_gt">еще категории <i uk-icon="icon:chevron-down"></i></div>
            <div id="left_more_gt" hidden class="uk-margin-top">
                {% for gt in generalTypes|slice(4) if gt.carTypeIds %}
                    <div class="left_gtypes">
                        <a href="/rent/{{ in_city }}/all/{{ gt.url }}" class=""><i class="fa fa-{{ gt.icon }} left_gt_icon"></i> <span class="uk-text-truncate uk-display-inline-block" style="width: 200px">{{ gt.header }}</span></a>
                    </div>
                {% endfor %}
            </div>
        </div>


        <div class="uk-margin-top">
            {% if app.session.has('logged_user') %}
                <a href="/card/new" class="uk-button uk-button-success uk-width-1-1 m_add_card_button">Сдать</a>
            {% elseif app.session.has('admin') %}
                <a href="/card/new" class="uk-button uk-button-success uk-width-1-1 m_add_card_button">Сдать</a>
            {% else %}
                <a uk-toggle="target: #sign_in" class="uk-button uk-button-success uk-width-1-1 m_add_card_button">Сдать</a>
            {% endif %}
        </div>
    </div>
</div>


