<div id="left_bar" uk-offcanvas>
    <div class="uk-offcanvas-bar">

        <button class="uk-offcanvas-close" type="button" uk-close></button>
        <div class="uk-clearfix">
            {{ include('user/auth_button_modal.html.twig') }}
        </div>
        <div class="uk-margin-top">
            <button class="uk-button uk-button-primary uk-width-1-1" uk-toggle="target: #left_search">Поиск</button>
        </div>

        <div class="uk-margin-top">
            {% for gt in generalTypes|slice(0,4) if gt.carTypeIds%}
                <div>
                    <a href="/rent/{{ in_city }}/all/{{ gt.url }}" class=""><i class="fa fa-{{ gt.icon }}"></i> {{ gt.header }}</a>
                </div>
            {% endfor %}
            <div class="uk-text-center cursor-pointer c_white" uk-toggle="target: #left_more_gt">еще категории <i uk-icon="icon:chevron-down"></i></div>
            <div id="left_more_gt" hidden>
                {% for gt in generalTypes|slice(4) if gt.carTypeIds %}
                    <div>
                        <a href="/rent/{{ in_city }}/all/{{ gt.url }}" class=""><i class="fa fa-{{ gt.icon }}"></i> {{ gt.header }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="uk-margin-top">
            {% if app.session.has('logged_user') %}
                <a href="/card/new" class="uk-button uk-button-success uk-width-1-1 m_add_card_button">Сдать</a>
            {% elseif app.session.has('admin') %}
                <a href="/card/new" class="uk-button uk-button-success uk-width-1-1 m_add_card_button">Сдать</a>
            {% else %}
                <a uk-toggle="target: #sign_in" class="uk-button uk-button-success uk-width-1-1 m_add_card_button">Сдать</a>
            {% endif %}
        </div>
    </div>
</div>


<div id="left_search" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <h2 class="uk-modal-title">Поиск</h2>
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="">
            <form uk-grid id="main_search_form" class="uk-grid-small">
                <div class="uk-width-1-1 uk-position-relative">
                    <div class="uk-hidden@s uk-text-small c_white">Город</div>
                    <div class="top_selector_box">{{ include('selector/adress_block.html.twig') }}</div>
                </div>

                <input type="hidden" name="gtURL" id="gtURL" value="cars">

                <div class="uk-width-1-1 uk-position-relative" >
                    <div class="uk-hidden@s uk-text-small c_white">Марка</div>
                    <div class="top_selector_box" id="mark_placement">{{ include('selector/mark_block.html.twig', {'mark_arr':mark_arr_sorted, 'type':'1'}) }}</div>
                </div>

                <div class="uk-width-1-1 uk-position-relative" >
                    <div class="uk-hidden@s uk-text-small c_white">Модель</div>
                    <div class="top_selector_box" id="model_placement">{{ include('selector/model_block.html.twig', {'model_arr':models_in_mark, 'mark_id':mark.id}) }}</div>
                </div>

                <div class="uk-width-1-1">
                    <button id="main_search_button" type="button" class="uk-button uk-button-primary uk-width-1-1">Найти</button>
                </div>
            </form>
        </div>
    </div>
</div>

