{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/owl.carousel.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('assets/css/owl.theme.default.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('assets/js/mainPage.js') }}"></script>
    <script src="{{ asset('assets/js/sliderSettings.js') }}"></script>
{% endblock %}

{% block content %}

<div class="standard_wide">

    <div uk-grid>
        {% for card in top3 %}
            <div class="uk-width-1-3">
                {#<a href="/card/{{ card.id }}" style="background:url('/assets/images/cards/{% for foto in card.getFotos if foto.isMain %}{{ foto.folder }}/t/{{ foto.id }}.jpg{% endfor %}') center center;#}
                        {#background-size: cover;#}
                        {#height: 200px;#}
                        {#display: block;">#}
                {#</a>#}
                {#<a href="/card/{{ card.id }}">{{ card.header }}</a>#}
                {#<div>#}
                    {#{{ card.getCity.header }}, {{ card.getCity.getParent.header }}, {{ card.getCity.country }}#}
                {#</div>#}
                {#<div>#}
                    {#{{ card.getMarkModel.getParent.header }} {{ card.getMarkModel.header }}#}
                {#</div>#}
                {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'200px'}) }}
            </div>
        {% endfor %}
    </div>

    <div class="uk-margin-large">
        <h1 class="uk-text-center">Большой выбор транспорта в аренду</h1>
        <form uk-grid action="/search" method="GET">
            <div class="uk-width-1-2">
                <div uk-grid>
                    <div class="uk-width-1-3">
                        <select id="countryCode" name="countryCode" class="uk-select">
                            <option value="0">- выберите страну -</option>
                            {% for country_code, country_title in countries %}
                                <option value="{{ country_code }}">{{ country_title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="uk-width-1-3" >
                        <select class="uk-select" name="regionId" id="regionId">
                            <option value="0">- затем регион -</option>
                        </select>
                    </div>
                    <div class="uk-width-1-3">
                        <select class="uk-select" name="cityId" id="cityId">
                            <option value="0">- затем город -</option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="uk-width-1-3">
                <div uk-grid>
                    <div class="uk-width-1-2" >
                        <select class="uk-select" name="pgtId" id="generalTypeTopLevelId">
                            <option value="0">- тип транспорта -</option>
                            {% for gt in generalTopLevel %}
                                <option value="{{ gt.id }}">{{ gt.header }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="uk-width-1-2" >
                        <select class="uk-select" name="gtId" id="generalTypeId">
                            <option value="0">- тип -</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="uk-width-1-6">
                <button class="uk-button uk-button-primary uk-width-1-1">Найти</button>
            </div>
        </form>
    </div>

    <div class="uk-margin-large">
        <h2>Легковые</h2>
        <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
            {% for card in cars %}
                {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
            {% endfor %}
        </div>
    </div>

    <div class="uk-margin-large">
        <h2>Грузовые</h2>
        <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
            {% for card in trucks %}
                {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
            {% endfor %}
        </div>
    </div>

    <div class="uk-margin-large">
        <div uk-grid>
            <div class="uk-width-1-2">
                <h2>Сигвеи</h2>
                <div class="owl-carousel owl-theme uk-width-1-1" data-items="2">
                    {% for card in segways %}
                        {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                    {% endfor %}
                </div>
            </div>
            <div class="uk-width-1-2">
                <h2>Велосипеды</h2>
                <div class="owl-carousel owl-theme uk-width-1-1" data-items="2">
                    {% for card in bicycles %}
                        {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="uk-margin-large">
        <h2>Катера</h2>
        <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
            {% for card in boats %}
                {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
            {% endfor %}
        </div>
    </div>

    <div class="uk-margin-large">
        <h2>Яхты</h2>
        <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
            {% for card in yachts %}
                {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
            {% endfor %}
        </div>
    </div>



</div>



{% endblock %}