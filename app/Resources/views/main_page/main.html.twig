{# begin верхний блок быстрого выбора и заставки #}
<div uk-grid class="uk-text-center bg_blue  uk-margin-remove" >
    <div class="uk-grid-collapse uk-child-width-expand@s uk-text-center uk-width-1-1 uk-padding-remove" uk-grid>
        <div class="uk-tile uk-tile-primary bg_blue">
            <div class="uk-padding-large uk-light uk-h4">Аренда и прокат транспорта от владельцев</div>
            {% if total is defined %}
            <div class="uk-padding-remove-top uk-light uk-h4 uk-text-small"><b>{{ total.cards }}</b> единиц транспорта в <b>{{ total.cities }}</b> городах</div>
            {% endif %}
        </div>
    </div>
{% if app.session.has('logged_user') %}

    <div class="uk-width-1-2 ">
        <a class=" uk-button uk-button-danger" href="/sl_page" style="border-radius: 30px;"></i>Арендовать</a>
    </div>
    <div class="uk-width-1-2 uk-padding-remove-left">
        <a class=" uk-button uk-button-default bg_white " href="/card/new"  style="border-radius: 30px;">Сдать в аренду</a>
    </div>

{% else %}
    <div class="uk-width-1-2 uk-padding-remove-left uk-margin-bottom uk-margin-remove-top">
        <button class=" uk-button uk-button-danger" uk-toggle="target: #sign_up" style="border-radius: 30px;">{% trans %}Арендовать{% endtrans %}</button>
    </div>
    <div class="uk-width-1-2 uk-padding-remove-left uk-margin-bottom uk-margin-remove-top">
        <button class=" uk-button uk-button-default bg_white " uk-toggle="target: #sign_up" style="border-radius: 30px;">{% trans %}Сдать в аренду{% endtrans %}</button>
    </div>

{% endif %}
</div>
{# end верхний блок быстрого выбора и заставки #}

