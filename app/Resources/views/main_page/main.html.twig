{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/owl.carousel.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/css/owl.theme.default.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('assets/js/mainPage.js') }}"></script>
    <script src="{{ asset('assets/js/city_general_mark_selector.js') }}"></script>
    <script src="{{ asset('assets/js/sliderSettings.js') }}"></script>
{% endblock %}

{% block content %}




    <div class="standard_wide uk-margin-large-top">

        <div uk-grid class="uk-grid-small">
            <div class="uk-width-5-6">
                <div class="owl-carousel owl-theme uk-width-1-1" data-items="5">
                    {% for card in topSlider %}
                        {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px', 'micro':true}) }}
                    {% endfor %}
                </div>
            </div>
            <div class="uk-width-1-6">
                <a class="topPlus" href="/article/kak_popast_v_top">
                    <div class="uk-text-center uk-margin-bottom"><i uk-icon="icon:plus"></i></div>
                    <div class="uk-text-center">Как попасть<br>в ТОП?</div>
                </a>
            </div>
        </div>

    </div>

    <div class="top_counter bg_green c_white uk-margin-large-top">
        <div class="standard_wide">
            <div uk-grid class="uk-grid-divider">
                <div class="uk-width-1-3">
                    <div class="uk-text-center">
                        <i class="fa fa-file"></i><br>
                        <span class="top_counter_desc">Объявлений</span><br>
                        <b>{{ total.cards }}</b>
                    </div>
                </div>
                <div class="uk-width-1-3">
                    <div class="uk-text-center">
                        <i class="fa fa-user"></i><br>
                        <span class="top_counter_desc">Пользователей</span><br>
                        <b>{{ total.users }}</b>
                    </div>
                </div>
                <div class="uk-width-1-3">
                    <div class="uk-text-center">
                        <i class="fa fa-list"></i><br>
                        <span class="top_counter_desc">Категорий</span><br>
                        <b>{{ total.categories }}</b>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="top_selector_block">
        <div class="standard_wide">
            <h1 class="uk-text-center">Большой выбор транспорта в аренду</h1>
            <div class="uk-margin-auto uk-width-3-4 uk-margin-bottom">
                <form uk-grid id="main_search_form">
                    <div class="uk-width-1-4@l uk-position-relative">
                        {{ include('selector/adress_block.html.twig') }}
                    </div>

                    <div class="uk-width-1-4@l uk-position-relative">
                        {{ include('selector/general_block.html.twig') }}
                    </div>

                    <div class="uk-width-1-4@l uk-position-relative">
                        {{ include('selector/mark_block.html.twig') }}
                    </div>

                    <div class="uk-width-1-4@l">
                        <button id="main_search_button" type="button" class="uk-button uk-button-primary uk-width-1-1">Найти</button>
                    </div>
                </form>
            </div>
            <hr>
            <div class="uk-margin-top">
                <div uk-grid class="uk-grid-small">
                    {% for gt in generalTypes if gt.cards is not empty%}
                        <div class="uk-width-1-4@l uk-width-1-2">
                            <a href="/show/rus/all/{{ gt.url }}" class="generals_in_main"><span class="gim_text uk-text-truncate">{{ gt.header }}</span><span class="gim_count">{{ gt.cards|length }}</span></a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="standard_wide">

        <div class="uk-margin-large">
            <h2>Легковые авто <a class="tx_16 undln" href="/show/rus/all/cars">показать все</a></h2>
            <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
                {% for card in cars %}
                    {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                {% endfor %}
            </div>
        </div>

        <div class="uk-margin-large">
            <h2>Грузовые авто <a class="tx_16 undln" href="/show/rus/all/trucks">показать все</a></h2>
            <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
                {% for card in trucks %}
                    {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                {% endfor %}
            </div>
        </div>

        <div class="uk-margin-large">
            <div uk-grid>
                <div class="uk-width-1-2@l">
                    <h2>Сигвеи <a class="tx_16 undln" href="/show/rus/all/segways">показать все</a></h2>
                    <div class="owl-carousel owl-theme uk-width-1-1" data-items="2">
                        {% for card in segways %}
                            {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                        {% endfor %}
                    </div>
                </div>
                <div class="uk-width-1-2@l">
                    <h2>Велосипеды <a class="tx_16 undln" href="/show/rus/all/bicycles">показать все</a></h2>
                    <div class="owl-carousel owl-theme uk-width-1-1" data-items="2">
                        {% for card in bicycles %}
                            {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="uk-margin-large">
            <h2>Катера <a class="tx_16 undln" href="/show/rus/all/boats">показать все</a></h2>
            <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
                {% for card in boats %}
                    {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                {% endfor %}
            </div>
        </div>

        <div class="uk-margin-large">
            <h2>Яхты <a class="tx_16 undln" href="/show/rus/all/yachts">показать все</a></h2>
            <div class="owl-carousel owl-theme uk-width-1-1" data-items="4">
                {% for card in yachts %}
                    {{ include('search/one_grid_view.html.twig', {'card':card, 'height':'150px'}) }}
                {% endfor %}
            </div>
        </div>


    </div>



{% endblock %}