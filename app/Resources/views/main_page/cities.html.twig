{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block metaTags %}
    {{ parent() }}
    <meta name="description" content="Мультипрокат| Прокат и аренда транспорта в {{ region.header }}">
{% endblock %}

{% block title %}Мультипрокат| Прокат и аренда транспорта в {{ region.header }}{% endblock %}

{% block content %}
<div class="uk-container">
    <h2>Прокат и аренда транспорта в {{ region.header }}</h2>
    <div class="uk-column-1-2 uk-column-1-3@s uk-column-1-5@m">
        {% for city in cities %}
            <a class="uk-display-block" href="/rent/{{ city.url }}">{{ city.header }} </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
